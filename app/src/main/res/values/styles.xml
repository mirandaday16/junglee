<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="JungleeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigHeadline">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="BigSubhead">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="ActivityTitle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="PostHeadline">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="Detail">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
    </style>

    <style name="MenuItem">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/colorSurfaceLight</item>
    </style>
</resources>